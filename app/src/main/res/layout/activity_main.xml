<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a10016322.musicdemo.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/play_id"
        android:layout_marginTop="67dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:id="@+id/pause_id"
        android:layout_below="@+id/play_id"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:id="@+id/stop_id"
        android:layout_below="@+id/pause_id"
        android:layout_alignLeft="@+id/play_id"
        android:layout_alignStart="@+id/play_id" />

    <Button
        android:text="Restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/restart_id"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/stop_id"
        android:layout_alignStart="@+id/stop_id" />

    <Button
        android:text="Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:id="@+id/time_id"
        android:layout_below="@+id/restart_id"
        android:layout_alignLeft="@+id/restart_id"
        android:layout_alignStart="@+id/restart_id" />

</RelativeLayout>
